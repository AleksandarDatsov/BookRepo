@model BookStore.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h2>@BookStore.Resources.Languages.Resource.Login</h2>
<body background="~/Content/Images/loginPageBackground.jpg" style="background-size:100% 100%;background-repeat:no-repeat">
    @using (Html.BeginForm(MVC.Accounts.Actions.Login(), FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <hr>
        <br />
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(u => u.Username, new { @Value= this.ViewBag.Username, @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                    <br />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(u => u.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        if (ViewBag.ShowDiv == true)
        {
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.ActionLink(linkText: "Send Confirmation Email", actionName: "SendConfirmationEmail", controllerName: "Accounts", routeValues: new { userName = Model.Username, }, htmlAttributes: null)&nbsp;<span class="glyphicon glyphicon - send"></span>
                    </div>
                </div>
            </div>
        }
        <br />
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <div class="col-md-7" style="float:right">
                        @Html.AntiForgeryToken()
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <button type="submit" class="btn btn-default" id="buttonSize">@BookStore.Resources.Languages.Resource.Login&nbsp;<span class="glyphicon glyphicon-log-in"></span></button>
                    </div>
                </div>
            </div>
        </div>
    }
</body>